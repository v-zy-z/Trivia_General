            System.out.println("INCORRECTA");
        }

        System.out.println("¿Cuál es el elemento más abundante en el universo?");
        System.out.println("A.- Oxígeno");
        System.out.println("B.- Hidrógeno");
        System.out.println("C.- Helio");
        respuesta = scan.nextLine();
        if (respuesta.equalsIgnoreCase("B")) {
            System.out.println("CORRECTA");
            contador += 1;
        } else {
            System.out.println("INCORRECTA");
        }



        
            }


        }
